using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.UserTriggerActionNotificationsService
{
    public class Save : IInsertEvent<UserTriggerActionNotificationsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(UserTriggerActionNotificationsViewModel model, IUnitOfWork unitOfWork, Response<UserTriggerActionNotificationsViewModel> result, ICoreUser user)
        {

            var newCustom = UserTriggerActionNotifications();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<UserTriggerActionNotification>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = UserTriggerActionNotifications
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(UserTriggerActionNotificationsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<UserTriggerActionNotification>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<UserTriggerActionNotification>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
