using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.AdminEventLogService
{
    public class Save : IInsertEvent<AdminEventLogViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(AdminEventLogViewModel model, IUnitOfWork unitOfWork, Response<AdminEventLogViewModel> result, ICoreUser user)
        {

            var newCustom = AdminEventLog();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<AdminEventLog>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = AdminEventLog
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(AdminEventLogViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<AdminEventLog>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<AdminEventLog>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
