using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.AdminEventLogService
{
    public class Update : IUpdateEvent<AdminEventLogViewModel,AdminEventLog>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(AdminEventLogViewModel model, ref IQueryable<AdminEventLog> repository, IUnitOfWork unitOfWork, Response<AdminEventLogViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = AdminEventLog
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<AdminEventLog>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = AdminEventLogMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

