using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.AdminConnectorLogService
{
    public class Save : IInsertEvent<AdminConnectorLogViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(AdminConnectorLogViewModel model, IUnitOfWork unitOfWork, Response<AdminConnectorLogViewModel> result, ICoreUser user)
        {

            var newCustom = AdminConnectorLog();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<AdminConnectorLog>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = AdminConnectorLog
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(AdminConnectorLogViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<AdminConnectorLog>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<AdminConnectorLog>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
