using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ClientSecretsService
{
    public class Save : IInsertEvent<ClientSecretsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ClientSecretsViewModel model, IUnitOfWork unitOfWork, Response<ClientSecretsViewModel> result, ICoreUser user)
        {

            var newCustom = ClientSecrets();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ClientSecret>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ClientSecrets
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ClientSecretsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ClientSecret>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ClientSecret>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
