using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ExternalIntegrationsService
{
    public class Save : IInsertEvent<ExternalIntegrationsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ExternalIntegrationsViewModel model, IUnitOfWork unitOfWork, Response<ExternalIntegrationsViewModel> result, ICoreUser user)
        {

            var newCustom = ExternalIntegrations();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ExternalIntegration>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ExternalIntegrations
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ExternalIntegrationsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ExternalIntegration>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ExternalIntegration>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
