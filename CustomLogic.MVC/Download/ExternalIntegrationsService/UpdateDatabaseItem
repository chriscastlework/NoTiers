using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ExternalIntegrationsService
{
    public class Update : IUpdateEvent<ExternalIntegrationsViewModel,ExternalIntegration>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ExternalIntegrationsViewModel model, ref IQueryable<ExternalIntegration> repository, IUnitOfWork unitOfWork, Response<ExternalIntegrationsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = ExternalIntegrations
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<ExternalIntegration>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ExternalIntegrationsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

