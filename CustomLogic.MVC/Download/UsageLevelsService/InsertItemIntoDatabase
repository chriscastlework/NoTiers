using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.UsageLevelsService
{
    public class Save : IInsertEvent<UsageLevelsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(UsageLevelsViewModel model, IUnitOfWork unitOfWork, Response<UsageLevelsViewModel> result, ICoreUser user)
        {

            var newCustom = UsageLevels();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<UsageLevel>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = UsageLevels
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(UsageLevelsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<UsageLevel>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<UsageLevel>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
