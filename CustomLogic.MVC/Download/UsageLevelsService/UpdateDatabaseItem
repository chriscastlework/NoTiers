using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.UsageLevelsService
{
    public class Update : IUpdateEvent<UsageLevelsViewModel,UsageLevel>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(UsageLevelsViewModel model, ref IQueryable<UsageLevel> repository, IUnitOfWork unitOfWork, Response<UsageLevelsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = UsageLevels
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<UsageLevel>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = UsageLevelsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

