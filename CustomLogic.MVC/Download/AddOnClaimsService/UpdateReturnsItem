using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.AddOnClaimsService
{
public class ReturnResultEvent : IUpdateEvent<AddOnClaimsViewModel, AddOnClaim>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(AddOnClaimsViewModel model, ref IQueryable< AddOnClaim> repository, IUnitOfWork unitOfWork, Response<AddOnClaimsViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<AddOnClaim>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = AddOnClaims
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

