using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.SideNavsService
{
    public class Update : IUpdateEvent<SideNavsViewModel,SideNav>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(SideNavsViewModel model, ref IQueryable<SideNav> repository, IUnitOfWork unitOfWork, Response<SideNavsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = SideNavs
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<SideNav>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = SideNavsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

