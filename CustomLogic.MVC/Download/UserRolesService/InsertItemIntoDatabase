using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.UserRolesService
{
    public class Save : IInsertEvent<UserRolesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(UserRolesViewModel model, IUnitOfWork unitOfWork, Response<UserRolesViewModel> result, ICoreUser user)
        {

            var newCustom = UserRoles();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<UserRole>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = UserRoles
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(UserRolesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<UserRole>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<UserRole>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
