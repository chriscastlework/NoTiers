using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.TablePreferencesService
{
    public class Save : IInsertEvent<TablePreferencesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(TablePreferencesViewModel model, IUnitOfWork unitOfWork, Response<TablePreferencesViewModel> result, ICoreUser user)
        {

            var newCustom = TablePreferences();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<TablePreference>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = TablePreferences
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(TablePreferencesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<TablePreference>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<TablePreference>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
