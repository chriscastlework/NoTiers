using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.TablePreferencesService
{
    public class Update : IUpdateEvent<TablePreferencesViewModel,TablePreference>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(TablePreferencesViewModel model, ref IQueryable<TablePreference> repository, IUnitOfWork unitOfWork, Response<TablePreferencesViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = TablePreferences
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<TablePreference>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = TablePreferencesMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

