using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CommentsService
{
    public class Save : IInsertEvent<CommentsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CommentsViewModel model, IUnitOfWork unitOfWork, Response<CommentsViewModel> result, ICoreUser user)
        {

            var newCustom = Comments();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Comment>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Comments
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CommentsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Comment>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Comment>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
