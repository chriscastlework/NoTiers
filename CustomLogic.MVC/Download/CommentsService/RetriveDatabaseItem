using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.CommentsService
{
    public class View : IViewEvent<CommentsViewModel,Comment>
    {
        public int CreatedId = 0;

        public Response<CommentsViewModel> Run(CommentsViewModel model,ref IQueryable<Comment> repository, IUnitOfWork unitOfWork, Response<CommentsViewModel> result, ICoreUser user)
        {
            var itemToUpdate = repository.SingleOrDefault(c => c.Id == model.Id);

            if (itemToUpdate != null)
            {
                var newCustomResult = Comments
                Mapper.MapDbModelToViewModel(itemToUpdate);
                result.Data = newCustomResult;
                result.Success = true;
            }
            else
            {
                result.Success = false;
                result.LogError("Error viewing Comments");
            }

            return result;
        }

    }
}
