using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.EmailTemplatesService
{
    public class Save : IInsertEvent<EmailTemplatesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(EmailTemplatesViewModel model, IUnitOfWork unitOfWork, Response<EmailTemplatesViewModel> result, ICoreUser user)
        {

            var newCustom = EmailTemplates();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<EmailTemplate>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = EmailTemplates
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(EmailTemplatesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<EmailTemplate>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<EmailTemplate>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
