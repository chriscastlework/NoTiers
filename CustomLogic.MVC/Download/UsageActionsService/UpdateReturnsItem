using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.UsageActionsService
{
public class ReturnResultEvent : IUpdateEvent<UsageActionsViewModel, UsageAction>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(UsageActionsViewModel model, ref IQueryable< UsageAction> repository, IUnitOfWork unitOfWork, Response<UsageActionsViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<UsageAction>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = UsageActions
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

