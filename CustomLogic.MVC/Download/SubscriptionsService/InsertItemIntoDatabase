using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.SubscriptionsService
{
    public class Save : IInsertEvent<SubscriptionsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(SubscriptionsViewModel model, IUnitOfWork unitOfWork, Response<SubscriptionsViewModel> result, ICoreUser user)
        {

            var newCustom = Subscriptions();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Subscription>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Subscriptions
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(SubscriptionsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Subscription>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Subscription>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
