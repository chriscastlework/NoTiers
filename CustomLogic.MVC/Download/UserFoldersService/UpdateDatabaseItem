using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.UserFoldersService
{
    public class Update : IUpdateEvent<UserFoldersViewModel,UserFolder>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(UserFoldersViewModel model, ref IQueryable<UserFolder> repository, IUnitOfWork unitOfWork, Response<UserFoldersViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = UserFolders
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<UserFolder>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = UserFoldersMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

