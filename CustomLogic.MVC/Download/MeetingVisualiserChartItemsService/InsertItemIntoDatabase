using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.MeetingVisualiserChartItemsService
{
    public class Save : IInsertEvent<MeetingVisualiserChartItemsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(MeetingVisualiserChartItemsViewModel model, IUnitOfWork unitOfWork, Response<MeetingVisualiserChartItemsViewModel> result, ICoreUser user)
        {

            var newCustom = MeetingVisualiserChartItems();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<MeetingVisualiserChartItem>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = MeetingVisualiserChartItems
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(MeetingVisualiserChartItemsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<MeetingVisualiserChartItem>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<MeetingVisualiserChartItem>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
