using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ClientRedirectUrisService
{
    public class Save : IInsertEvent<ClientRedirectUrisViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ClientRedirectUrisViewModel model, IUnitOfWork unitOfWork, Response<ClientRedirectUrisViewModel> result, ICoreUser user)
        {

            var newCustom = ClientRedirectUris();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ClientRedirectUri>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ClientRedirectUris
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ClientRedirectUrisViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ClientRedirectUri>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ClientRedirectUri>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
