using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ClientClaimsService
{
    public class Save : IInsertEvent<ClientClaimsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ClientClaimsViewModel model, IUnitOfWork unitOfWork, Response<ClientClaimsViewModel> result, ICoreUser user)
        {

            var newCustom = ClientClaims();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ClientClaim>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ClientClaims
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ClientClaimsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ClientClaim>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ClientClaim>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
