using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.CustomObjectFilterFieldsService
{
public class ReturnResultEvent : IUpdateEvent<CustomObjectFilterFieldsViewModel, CustomObjectFilterField>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(CustomObjectFilterFieldsViewModel model, ref IQueryable< CustomObjectFilterField> repository, IUnitOfWork unitOfWork, Response<CustomObjectFilterFieldsViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<CustomObjectFilterField>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = CustomObjectFilterFields
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

