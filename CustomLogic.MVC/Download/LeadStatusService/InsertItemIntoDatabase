using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.LeadStatusService
{
    public class Save : IInsertEvent<LeadStatusViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(LeadStatusViewModel model, IUnitOfWork unitOfWork, Response<LeadStatusViewModel> result, ICoreUser user)
        {

            var newCustom = LeadStatus();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<LeadStatu>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = LeadStatus
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(LeadStatusViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<LeadStatu>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<LeadStatu>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
