using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.NotifyActionsService
{
    public class Save : IInsertEvent<NotifyActionsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(NotifyActionsViewModel model, IUnitOfWork unitOfWork, Response<NotifyActionsViewModel> result, ICoreUser user)
        {

            var newCustom = NotifyActions();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<NotifyAction>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = NotifyActions
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(NotifyActionsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<NotifyAction>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<NotifyAction>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
