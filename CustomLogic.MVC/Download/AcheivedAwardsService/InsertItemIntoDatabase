using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.AcheivedAwardsService
{
    public class Save : IInsertEvent<AcheivedAwardsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(AcheivedAwardsViewModel model, IUnitOfWork unitOfWork, Response<AcheivedAwardsViewModel> result, ICoreUser user)
        {

            var newCustom = AcheivedAwards();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<AcheivedAward>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = AcheivedAwards
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(AcheivedAwardsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<AcheivedAward>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<AcheivedAward>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
