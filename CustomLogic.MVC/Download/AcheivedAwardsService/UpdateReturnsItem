using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.AcheivedAwardsService
{
public class ReturnResultEvent : IUpdateEvent<AcheivedAwardsViewModel, AcheivedAward>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(AcheivedAwardsViewModel model, ref IQueryable< AcheivedAward> repository, IUnitOfWork unitOfWork, Response<AcheivedAwardsViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<AcheivedAward>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = AcheivedAwards
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

