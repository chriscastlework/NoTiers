using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.OrganisationSalesObjectViewsService
{
    public class Save : IInsertEvent<OrganisationSalesObjectViewsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(OrganisationSalesObjectViewsViewModel model, IUnitOfWork unitOfWork, Response<OrganisationSalesObjectViewsViewModel> result, ICoreUser user)
        {

            var newCustom = OrganisationSalesObjectViews();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<OrganisationSalesObjectView>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = OrganisationSalesObjectViews
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(OrganisationSalesObjectViewsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<OrganisationSalesObjectView>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<OrganisationSalesObjectView>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
