using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.StandardRelationshipsService
{
    public class Save : IInsertEvent<StandardRelationshipsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(StandardRelationshipsViewModel model, IUnitOfWork unitOfWork, Response<StandardRelationshipsViewModel> result, ICoreUser user)
        {

            var newCustom = StandardRelationships();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<StandardRelationship>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = StandardRelationships
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(StandardRelationshipsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<StandardRelationship>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<StandardRelationship>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
