using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.RulesService
{
    public class Save : IInsertEvent<RulesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(RulesViewModel model, IUnitOfWork unitOfWork, Response<RulesViewModel> result, ICoreUser user)
        {

            var newCustom = Rules();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Rule>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Rules
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(RulesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Rule>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Rule>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
