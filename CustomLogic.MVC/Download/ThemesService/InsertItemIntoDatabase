using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ThemesService
{
    public class Save : IInsertEvent<ThemesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ThemesViewModel model, IUnitOfWork unitOfWork, Response<ThemesViewModel> result, ICoreUser user)
        {

            var newCustom = Themes();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Theme>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Themes
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ThemesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Theme>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Theme>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
