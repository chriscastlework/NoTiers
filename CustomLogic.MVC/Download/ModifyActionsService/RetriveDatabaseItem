using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.ModifyActionsService
{
    public class View : IViewEvent<ModifyActionsViewModel,ModifyAction>
    {
        public int CreatedId = 0;

        public Response<ModifyActionsViewModel> Run(ModifyActionsViewModel model,ref IQueryable<ModifyAction> repository, IUnitOfWork unitOfWork, Response<ModifyActionsViewModel> result, ICoreUser user)
        {
            var itemToUpdate = repository.SingleOrDefault(c => c.Id == model.Id);

            if (itemToUpdate != null)
            {
                var newCustomResult = ModifyActions
                Mapper.MapDbModelToViewModel(itemToUpdate);
                result.Data = newCustomResult;
                result.Success = true;
            }
            else
            {
                result.Success = false;
                result.LogError("Error viewing ModifyActions");
            }

            return result;
        }

    }
}
