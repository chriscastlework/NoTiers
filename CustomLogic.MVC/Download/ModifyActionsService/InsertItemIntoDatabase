using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ModifyActionsService
{
    public class Save : IInsertEvent<ModifyActionsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ModifyActionsViewModel model, IUnitOfWork unitOfWork, Response<ModifyActionsViewModel> result, ICoreUser user)
        {

            var newCustom = ModifyActions();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ModifyAction>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ModifyActions
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ModifyActionsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ModifyAction>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ModifyAction>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
