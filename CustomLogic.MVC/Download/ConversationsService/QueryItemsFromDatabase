using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.ConversationsService
{
    public class QueryLogic : IViewListEvent<ConversationsViewModel, Conversation>
    {

            public bool Run(NgTableParams model, ref IQueryable<Conversation> repository, NgTable<ConversationsViewModel> result, ICoreUser user, IUnitOfWork db
            {
            var ngTransformer = new QueryToNgTable<ConversationsViewModel>();

            var query = Conversations
            Mapper.MapDbModelQueryToViewModelQuery(repository);

            ngTransformer.ToNgTableDataSet(model, query, result);
            return true;
        }
    }
}

