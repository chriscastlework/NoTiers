using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.EditionCostsService
{
    public class Save : IInsertEvent<EditionCostsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(EditionCostsViewModel model, IUnitOfWork unitOfWork, Response<EditionCostsViewModel> result, ICoreUser user)
        {

            var newCustom = EditionCosts();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<EditionCost>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = EditionCosts
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(EditionCostsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<EditionCost>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<EditionCost>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
