using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CustomFieldGroupsService
{
    public class Save : IInsertEvent<CustomFieldGroupsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CustomFieldGroupsViewModel model, IUnitOfWork unitOfWork, Response<CustomFieldGroupsViewModel> result, ICoreUser user)
        {

            var newCustom = CustomFieldGroups();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<CustomFieldGroup>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = CustomFieldGroups
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CustomFieldGroupsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<CustomFieldGroup>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<CustomFieldGroup>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
