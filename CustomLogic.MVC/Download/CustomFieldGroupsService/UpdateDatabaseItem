using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.CustomFieldGroupsService
{
    public class Update : IUpdateEvent<CustomFieldGroupsViewModel,CustomFieldGroup>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(CustomFieldGroupsViewModel model, ref IQueryable<CustomFieldGroup> repository, IUnitOfWork unitOfWork, Response<CustomFieldGroupsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = CustomFieldGroups
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<CustomFieldGroup>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = CustomFieldGroupsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

