using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.FeatureClaimsService
{
    public class Save : IInsertEvent<FeatureClaimsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(FeatureClaimsViewModel model, IUnitOfWork unitOfWork, Response<FeatureClaimsViewModel> result, ICoreUser user)
        {

            var newCustom = FeatureClaims();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<FeatureClaim>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = FeatureClaims
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(FeatureClaimsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<FeatureClaim>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<FeatureClaim>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
