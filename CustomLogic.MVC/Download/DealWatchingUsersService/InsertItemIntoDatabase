using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.DealWatchingUsersService
{
    public class Save : IInsertEvent<DealWatchingUsersViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(DealWatchingUsersViewModel model, IUnitOfWork unitOfWork, Response<DealWatchingUsersViewModel> result, ICoreUser user)
        {

            var newCustom = DealWatchingUsers();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<DealWatchingUser>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = DealWatchingUsers
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(DealWatchingUsersViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<DealWatchingUser>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<DealWatchingUser>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
