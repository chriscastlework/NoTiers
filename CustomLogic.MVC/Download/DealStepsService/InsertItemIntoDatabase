using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.DealStepsService
{
    public class Save : IInsertEvent<DealStepsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(DealStepsViewModel model, IUnitOfWork unitOfWork, Response<DealStepsViewModel> result, ICoreUser user)
        {

            var newCustom = DealSteps();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<DealStep>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = DealSteps
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(DealStepsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<DealStep>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<DealStep>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
