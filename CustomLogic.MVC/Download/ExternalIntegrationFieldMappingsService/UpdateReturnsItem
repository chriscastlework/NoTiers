using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.ExternalIntegrationFieldMappingsService
{
public class ReturnResultEvent : IUpdateEvent<ExternalIntegrationFieldMappingsViewModel, ExternalIntegrationFieldMapping>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(ExternalIntegrationFieldMappingsViewModel model, ref IQueryable< ExternalIntegrationFieldMapping> repository, IUnitOfWork unitOfWork, Response<ExternalIntegrationFieldMappingsViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<ExternalIntegrationFieldMapping>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = ExternalIntegrationFieldMappings
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

