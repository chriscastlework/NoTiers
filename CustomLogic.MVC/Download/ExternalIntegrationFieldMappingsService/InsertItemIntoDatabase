using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ExternalIntegrationFieldMappingsService
{
    public class Save : IInsertEvent<ExternalIntegrationFieldMappingsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ExternalIntegrationFieldMappingsViewModel model, IUnitOfWork unitOfWork, Response<ExternalIntegrationFieldMappingsViewModel> result, ICoreUser user)
        {

            var newCustom = ExternalIntegrationFieldMappings();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ExternalIntegrationFieldMapping>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ExternalIntegrationFieldMappings
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ExternalIntegrationFieldMappingsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ExternalIntegrationFieldMapping>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ExternalIntegrationFieldMapping>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
