using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ExternalIntegrationFieldMappingsService
{
    public class Update : IUpdateEvent<ExternalIntegrationFieldMappingsViewModel,ExternalIntegrationFieldMapping>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ExternalIntegrationFieldMappingsViewModel model, ref IQueryable<ExternalIntegrationFieldMapping> repository, IUnitOfWork unitOfWork, Response<ExternalIntegrationFieldMappingsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = ExternalIntegrationFieldMappings
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<ExternalIntegrationFieldMapping>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ExternalIntegrationFieldMappingsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

