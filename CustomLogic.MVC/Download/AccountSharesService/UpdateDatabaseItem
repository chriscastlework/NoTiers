using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.AccountSharesService
{
    public class Update : IUpdateEvent<AccountSharesViewModel,AccountShare>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(AccountSharesViewModel model, ref IQueryable<AccountShare> repository, IUnitOfWork unitOfWork, Response<AccountSharesViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = AccountShares
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<AccountShare>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = AccountSharesMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

