using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.AccountSharesService
{
    public class Save : IInsertEvent<AccountSharesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(AccountSharesViewModel model, IUnitOfWork unitOfWork, Response<AccountSharesViewModel> result, ICoreUser user)
        {

            var newCustom = AccountShares();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<AccountShare>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = AccountShares
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(AccountSharesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<AccountShare>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<AccountShare>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
