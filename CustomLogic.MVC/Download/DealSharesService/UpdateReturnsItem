using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.DealSharesService
{
public class ReturnResultEvent : IUpdateEvent<DealSharesViewModel, DealShare>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(DealSharesViewModel model, ref IQueryable< DealShare> repository, IUnitOfWork unitOfWork, Response<DealSharesViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<DealShare>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = DealShares
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

