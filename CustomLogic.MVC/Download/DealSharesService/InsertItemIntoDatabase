using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.DealSharesService
{
    public class Save : IInsertEvent<DealSharesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(DealSharesViewModel model, IUnitOfWork unitOfWork, Response<DealSharesViewModel> result, ICoreUser user)
        {

            var newCustom = DealShares();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<DealShare>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = DealShares
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(DealSharesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<DealShare>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<DealShare>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
