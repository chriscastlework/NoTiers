using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.CustomObjectTriggerPropertyValuesService
{
public class ReturnResultEvent : IUpdateEvent<CustomObjectTriggerPropertyValuesViewModel, CustomObjectTriggerPropertyValue>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(CustomObjectTriggerPropertyValuesViewModel model, ref IQueryable< CustomObjectTriggerPropertyValue> repository, IUnitOfWork unitOfWork, Response<CustomObjectTriggerPropertyValuesViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<CustomObjectTriggerPropertyValue>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = CustomObjectTriggerPropertyValues
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

