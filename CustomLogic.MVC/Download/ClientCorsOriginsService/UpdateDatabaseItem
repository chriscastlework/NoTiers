using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ClientCorsOriginsService
{
    public class Update : IUpdateEvent<ClientCorsOriginsViewModel,ClientCorsOrigin>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ClientCorsOriginsViewModel model, ref IQueryable<ClientCorsOrigin> repository, IUnitOfWork unitOfWork, Response<ClientCorsOriginsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = ClientCorsOrigins
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<ClientCorsOrigin>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ClientCorsOriginsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

