using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.PickListOptionsService
{
    public class Save : IInsertEvent<PickListOptionsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(PickListOptionsViewModel model, IUnitOfWork unitOfWork, Response<PickListOptionsViewModel> result, ICoreUser user)
        {

            var newCustom = PickListOptions();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<PickListOption>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = PickListOptions
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(PickListOptionsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<PickListOption>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<PickListOption>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
