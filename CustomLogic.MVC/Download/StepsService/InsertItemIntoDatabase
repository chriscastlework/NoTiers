using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.StepsService
{
    public class Save : IInsertEvent<StepsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(StepsViewModel model, IUnitOfWork unitOfWork, Response<StepsViewModel> result, ICoreUser user)
        {

            var newCustom = Steps();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Step>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Steps
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(StepsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Step>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Step>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
