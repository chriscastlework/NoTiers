using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.OrganisationAllowedRolesService
{
public class ReturnResultEvent : IUpdateEvent<OrganisationAllowedRolesViewModel, OrganisationAllowedRole>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(OrganisationAllowedRolesViewModel model, ref IQueryable< OrganisationAllowedRole> repository, IUnitOfWork unitOfWork, Response<OrganisationAllowedRolesViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<OrganisationAllowedRole>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = OrganisationAllowedRoles
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

