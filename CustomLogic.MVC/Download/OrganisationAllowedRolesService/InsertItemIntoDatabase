using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.OrganisationAllowedRolesService
{
    public class Save : IInsertEvent<OrganisationAllowedRolesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(OrganisationAllowedRolesViewModel model, IUnitOfWork unitOfWork, Response<OrganisationAllowedRolesViewModel> result, ICoreUser user)
        {

            var newCustom = OrganisationAllowedRoles();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<OrganisationAllowedRole>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = OrganisationAllowedRoles
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(OrganisationAllowedRolesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<OrganisationAllowedRole>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<OrganisationAllowedRole>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
