using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.OrganisationAllowedRolesService
{
    public class View : IViewEvent<OrganisationAllowedRolesViewModel,OrganisationAllowedRole>
    {
        public int CreatedId = 0;

        public Response<OrganisationAllowedRolesViewModel> Run(OrganisationAllowedRolesViewModel model,ref IQueryable<OrganisationAllowedRole> repository, IUnitOfWork unitOfWork, Response<OrganisationAllowedRolesViewModel> result, ICoreUser user)
        {
            var itemToUpdate = repository.SingleOrDefault(c => c.Id == model.Id);

            if (itemToUpdate != null)
            {
                var newCustomResult = OrganisationAllowedRoles
                Mapper.MapDbModelToViewModel(itemToUpdate);
                result.Data = newCustomResult;
                result.Success = true;
            }
            else
            {
                result.Success = false;
                result.LogError("Error viewing OrganisationAllowedRoles");
            }

            return result;
        }

    }
}
