using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.FeatureEditionsService
{
    public class QueryLogic : IViewListEvent<FeatureEditionsViewModel, FeatureEdition>
    {

            public bool Run(NgTableParams model, ref IQueryable<FeatureEdition> repository, NgTable<FeatureEditionsViewModel> result, ICoreUser user, IUnitOfWork db
            {
            var ngTransformer = new QueryToNgTable<FeatureEditionsViewModel>();

            var query = FeatureEditions
            Mapper.MapDbModelQueryToViewModelQuery(repository);

            ngTransformer.ToNgTableDataSet(model, query, result);
            return true;
        }
    }
}

