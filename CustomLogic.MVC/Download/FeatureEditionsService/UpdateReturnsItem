using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.FeatureEditionsService
{
public class ReturnResultEvent : IUpdateEvent<FeatureEditionsViewModel, FeatureEdition>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(FeatureEditionsViewModel model, ref IQueryable< FeatureEdition> repository, IUnitOfWork unitOfWork, Response<FeatureEditionsViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<FeatureEdition>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = FeatureEditions
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

