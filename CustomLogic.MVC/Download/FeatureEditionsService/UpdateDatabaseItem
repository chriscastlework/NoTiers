using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.FeatureEditionsService
{
    public class Update : IUpdateEvent<FeatureEditionsViewModel,FeatureEdition>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(FeatureEditionsViewModel model, ref IQueryable<FeatureEdition> repository, IUnitOfWork unitOfWork, Response<FeatureEditionsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = FeatureEditions
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<FeatureEdition>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = FeatureEditionsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

