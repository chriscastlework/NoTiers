using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ProgramsService
{
    public class Save : IInsertEvent<ProgramsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ProgramsViewModel model, IUnitOfWork unitOfWork, Response<ProgramsViewModel> result, ICoreUser user)
        {

            var newCustom = Programs();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Program>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Programs
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ProgramsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Program>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Program>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
