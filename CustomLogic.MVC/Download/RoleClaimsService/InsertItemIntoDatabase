using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.RoleClaimsService
{
    public class Save : IInsertEvent<RoleClaimsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(RoleClaimsViewModel model, IUnitOfWork unitOfWork, Response<RoleClaimsViewModel> result, ICoreUser user)
        {

            var newCustom = RoleClaims();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<RoleClaim>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = RoleClaims
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(RoleClaimsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<RoleClaim>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<RoleClaim>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
