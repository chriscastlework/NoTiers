using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ConsentsService
{
    public class Update : IUpdateEvent<ConsentsViewModel,Consent>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ConsentsViewModel model, ref IQueryable<Consent> repository, IUnitOfWork unitOfWork, Response<ConsentsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = Consents
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<Consent>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ConsentsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

