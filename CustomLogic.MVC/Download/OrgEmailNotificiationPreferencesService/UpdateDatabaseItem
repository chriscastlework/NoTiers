using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.OrgEmailNotificiationPreferencesService
{
    public class Update : IUpdateEvent<OrgEmailNotificiationPreferencesViewModel,OrgEmailNotificiationPreference>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(OrgEmailNotificiationPreferencesViewModel model, ref IQueryable<OrgEmailNotificiationPreference> repository, IUnitOfWork unitOfWork, Response<OrgEmailNotificiationPreferencesViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = OrgEmailNotificiationPreferences
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<OrgEmailNotificiationPreference>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = OrgEmailNotificiationPreferencesMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

