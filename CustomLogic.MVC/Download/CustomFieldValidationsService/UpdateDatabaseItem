using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.CustomFieldValidationsService
{
    public class Update : IUpdateEvent<CustomFieldValidationsViewModel,CustomFieldValidation>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(CustomFieldValidationsViewModel model, ref IQueryable<CustomFieldValidation> repository, IUnitOfWork unitOfWork, Response<CustomFieldValidationsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = CustomFieldValidations
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<CustomFieldValidation>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = CustomFieldValidationsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

