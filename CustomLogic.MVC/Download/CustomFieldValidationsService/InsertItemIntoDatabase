using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CustomFieldValidationsService
{
    public class Save : IInsertEvent<CustomFieldValidationsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CustomFieldValidationsViewModel model, IUnitOfWork unitOfWork, Response<CustomFieldValidationsViewModel> result, ICoreUser user)
        {

            var newCustom = CustomFieldValidations();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<CustomFieldValidation>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = CustomFieldValidations
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CustomFieldValidationsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<CustomFieldValidation>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<CustomFieldValidation>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
