using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.UserClaimsService
{
    public class Save : IInsertEvent<UserClaimsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(UserClaimsViewModel model, IUnitOfWork unitOfWork, Response<UserClaimsViewModel> result, ICoreUser user)
        {

            var newCustom = UserClaims();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<UserClaim>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = UserClaims
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(UserClaimsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<UserClaim>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<UserClaim>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
