using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ClientScopesService
{
    public class Save : IInsertEvent<ClientScopesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ClientScopesViewModel model, IUnitOfWork unitOfWork, Response<ClientScopesViewModel> result, ICoreUser user)
        {

            var newCustom = ClientScopes();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ClientScope>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ClientScopes
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ClientScopesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ClientScope>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ClientScope>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
