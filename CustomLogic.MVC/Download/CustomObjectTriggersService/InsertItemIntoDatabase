using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CustomObjectTriggersService
{
    public class Save : IInsertEvent<CustomObjectTriggersViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CustomObjectTriggersViewModel model, IUnitOfWork unitOfWork, Response<CustomObjectTriggersViewModel> result, ICoreUser user)
        {

            var newCustom = CustomObjectTriggers();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<CustomObjectTrigger>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = CustomObjectTriggers
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CustomObjectTriggersViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<CustomObjectTrigger>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<CustomObjectTrigger>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
