using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.FeaturesService
{
    public class Save : IInsertEvent<FeaturesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(FeaturesViewModel model, IUnitOfWork unitOfWork, Response<FeaturesViewModel> result, ICoreUser user)
        {

            var newCustom = Features();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Feature>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Features
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(FeaturesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Feature>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Feature>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
