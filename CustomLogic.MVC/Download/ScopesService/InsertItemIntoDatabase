using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ScopesService
{
    public class Save : IInsertEvent<ScopesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ScopesViewModel model, IUnitOfWork unitOfWork, Response<ScopesViewModel> result, ICoreUser user)
        {

            var newCustom = Scopes();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Scope>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Scopes
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ScopesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Scope>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Scope>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
