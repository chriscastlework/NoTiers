using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.LeadConversionsService
{
    public class Save : IInsertEvent<LeadConversionsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(LeadConversionsViewModel model, IUnitOfWork unitOfWork, Response<LeadConversionsViewModel> result, ICoreUser user)
        {

            var newCustom = LeadConversions();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<LeadConversion>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = LeadConversions
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(LeadConversionsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<LeadConversion>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<LeadConversion>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
