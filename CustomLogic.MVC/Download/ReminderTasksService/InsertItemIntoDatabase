using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ReminderTasksService
{
    public class Save : IInsertEvent<ReminderTasksViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ReminderTasksViewModel model, IUnitOfWork unitOfWork, Response<ReminderTasksViewModel> result, ICoreUser user)
        {

            var newCustom = ReminderTasks();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ReminderTask>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ReminderTasks
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ReminderTasksViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ReminderTask>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ReminderTask>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
