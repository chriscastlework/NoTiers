using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ViewRecordsService
{
    public class Save : IInsertEvent<ViewRecordsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ViewRecordsViewModel model, IUnitOfWork unitOfWork, Response<ViewRecordsViewModel> result, ICoreUser user)
        {

            var newCustom = ViewRecords();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ViewRecord>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ViewRecords
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ViewRecordsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ViewRecord>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ViewRecord>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
