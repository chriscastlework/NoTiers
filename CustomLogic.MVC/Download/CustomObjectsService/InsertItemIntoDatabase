using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CustomObjectsService
{
    public class Save : IInsertEvent<CustomObjectsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CustomObjectsViewModel model, IUnitOfWork unitOfWork, Response<CustomObjectsViewModel> result, ICoreUser user)
        {

            var newCustom = CustomObjects();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<CustomObject>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = CustomObjects
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CustomObjectsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<CustomObject>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<CustomObject>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
