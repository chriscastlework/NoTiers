using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.CustomObjectsService
{
    public class Delete : IDeleteEvent<CustomObjectsViewModel,CustomObject>
    {

        public bool Run(CustomObjects ViewModel model, ref IQueryable<CustomObject>repository, IUnitOfWork unitOfWork, Response<CustomObjectsViewModel> result, ICoreUser user)
        {
            // Todo change id for the tables PK
            var customToRemove = unitOfWork.With<CustomObject>().Find(model.Id);unitOfWork.With<CustomObject>().Remove(customToRemove);
            unitOfWork.SaveChanges();
            return true;
        }
    }
}

