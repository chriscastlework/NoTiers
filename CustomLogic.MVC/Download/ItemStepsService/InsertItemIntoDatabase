using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ItemStepsService
{
    public class Save : IInsertEvent<ItemStepsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ItemStepsViewModel model, IUnitOfWork unitOfWork, Response<ItemStepsViewModel> result, ICoreUser user)
        {

            var newCustom = ItemSteps();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ItemStep>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ItemSteps
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ItemStepsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ItemStep>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ItemStep>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
