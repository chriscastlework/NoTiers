using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ApiAuthenticationsService
{
    public class Save : IInsertEvent<ApiAuthenticationsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ApiAuthenticationsViewModel model, IUnitOfWork unitOfWork, Response<ApiAuthenticationsViewModel> result, ICoreUser user)
        {

            var newCustom = ApiAuthentications();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ApiAuthentication>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ApiAuthentications
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ApiAuthenticationsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ApiAuthentication>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ApiAuthentication>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
