using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.TempNotificationFieldsService
{
public class ReturnResultEvent : IUpdateEvent<TempNotificationFieldsViewModel, TempNotificationField>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(TempNotificationFieldsViewModel model, ref IQueryable< TempNotificationField> repository, IUnitOfWork unitOfWork, Response<TempNotificationFieldsViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<TempNotificationField>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = TempNotificationFields
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

