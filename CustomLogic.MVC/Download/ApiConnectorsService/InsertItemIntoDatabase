using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ApiConnectorsService
{
    public class Save : IInsertEvent<ApiConnectorsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ApiConnectorsViewModel model, IUnitOfWork unitOfWork, Response<ApiConnectorsViewModel> result, ICoreUser user)
        {

            var newCustom = ApiConnectors();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ApiConnector>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ApiConnectors
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ApiConnectorsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ApiConnector>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ApiConnector>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
