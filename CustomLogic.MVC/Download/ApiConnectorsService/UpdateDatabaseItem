using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ApiConnectorsService
{
    public class Update : IUpdateEvent<ApiConnectorsViewModel,ApiConnector>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ApiConnectorsViewModel model, ref IQueryable<ApiConnector> repository, IUnitOfWork unitOfWork, Response<ApiConnectorsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = ApiConnectors
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<ApiConnector>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ApiConnectorsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

