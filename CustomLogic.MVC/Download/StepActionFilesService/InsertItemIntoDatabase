using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.StepActionFilesService
{
    public class Save : IInsertEvent<StepActionFilesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(StepActionFilesViewModel model, IUnitOfWork unitOfWork, Response<StepActionFilesViewModel> result, ICoreUser user)
        {

            var newCustom = StepActionFiles();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<StepActionFile>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = StepActionFiles
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(StepActionFilesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<StepActionFile>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<StepActionFile>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
