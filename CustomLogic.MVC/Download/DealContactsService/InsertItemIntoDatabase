using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.DealContactsService
{
    public class Save : IInsertEvent<DealContactsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(DealContactsViewModel model, IUnitOfWork unitOfWork, Response<DealContactsViewModel> result, ICoreUser user)
        {

            var newCustom = DealContacts();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<DealContact>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = DealContacts
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(DealContactsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<DealContact>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<DealContact>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
