using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.SalesObjectViewsService
{
    public class Save : IInsertEvent<SalesObjectViewsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(SalesObjectViewsViewModel model, IUnitOfWork unitOfWork, Response<SalesObjectViewsViewModel> result, ICoreUser user)
        {

            var newCustom = SalesObjectViews();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<SalesObjectView>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = SalesObjectViews
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(SalesObjectViewsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<SalesObjectView>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<SalesObjectView>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
