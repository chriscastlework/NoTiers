using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ScopeSecretsService
{
    public class Update : IUpdateEvent<ScopeSecretsViewModel,ScopeSecret>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ScopeSecretsViewModel model, ref IQueryable<ScopeSecret> repository, IUnitOfWork unitOfWork, Response<ScopeSecretsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = ScopeSecrets
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<ScopeSecret>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ScopeSecretsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

