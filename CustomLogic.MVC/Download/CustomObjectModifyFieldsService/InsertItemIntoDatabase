using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CustomObjectModifyFieldsService
{
    public class Save : IInsertEvent<CustomObjectModifyFieldsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CustomObjectModifyFieldsViewModel model, IUnitOfWork unitOfWork, Response<CustomObjectModifyFieldsViewModel> result, ICoreUser user)
        {

            var newCustom = CustomObjectModifyFields();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<CustomObjectModifyField>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = CustomObjectModifyFields
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CustomObjectModifyFieldsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<CustomObjectModifyField>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<CustomObjectModifyField>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
