using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.StandardObjectRelationshipDefintionsService
{
    public class Save : IInsertEvent<StandardObjectRelationshipDefintionsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(StandardObjectRelationshipDefintionsViewModel model, IUnitOfWork unitOfWork, Response<StandardObjectRelationshipDefintionsViewModel> result, ICoreUser user)
        {

            var newCustom = StandardObjectRelationshipDefintions();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<StandardObjectRelationshipDefintion>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = StandardObjectRelationshipDefintions
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(StandardObjectRelationshipDefintionsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<StandardObjectRelationshipDefintion>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<StandardObjectRelationshipDefintion>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
