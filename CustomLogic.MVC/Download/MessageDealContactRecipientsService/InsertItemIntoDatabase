using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.MessageDealContactRecipientsService
{
    public class Save : IInsertEvent<MessageDealContactRecipientsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(MessageDealContactRecipientsViewModel model, IUnitOfWork unitOfWork, Response<MessageDealContactRecipientsViewModel> result, ICoreUser user)
        {

            var newCustom = MessageDealContactRecipients();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<MessageDealContactRecipient>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = MessageDealContactRecipients
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(MessageDealContactRecipientsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<MessageDealContactRecipient>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<MessageDealContactRecipient>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
