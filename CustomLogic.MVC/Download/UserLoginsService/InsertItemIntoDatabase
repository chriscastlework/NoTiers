using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.UserLoginsService
{
    public class Save : IInsertEvent<UserLoginsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(UserLoginsViewModel model, IUnitOfWork unitOfWork, Response<UserLoginsViewModel> result, ICoreUser user)
        {

            var newCustom = UserLogins();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<UserLogin>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = UserLogins
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(UserLoginsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<UserLogin>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<UserLogin>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
