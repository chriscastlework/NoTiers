using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ClientIdPRestrictionsService
{
    public class Update : IUpdateEvent<ClientIdPRestrictionsViewModel,ClientIdPRestriction>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ClientIdPRestrictionsViewModel model, ref IQueryable<ClientIdPRestriction> repository, IUnitOfWork unitOfWork, Response<ClientIdPRestrictionsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = ClientIdPRestrictions
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<ClientIdPRestriction>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ClientIdPRestrictionsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

