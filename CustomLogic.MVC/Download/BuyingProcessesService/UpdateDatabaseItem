using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.BuyingProcessesService
{
    public class Update : IUpdateEvent<BuyingProcessesViewModel,BuyingProcess>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(BuyingProcessesViewModel model, ref IQueryable<BuyingProcess> repository, IUnitOfWork unitOfWork, Response<BuyingProcessesViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = BuyingProcesses
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<BuyingProcess>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = BuyingProcessesMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

