using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.BuyingProcessesService
{
    public class Save : IInsertEvent<BuyingProcessesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(BuyingProcessesViewModel model, IUnitOfWork unitOfWork, Response<BuyingProcessesViewModel> result, ICoreUser user)
        {

            var newCustom = BuyingProcesses();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<BuyingProcess>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = BuyingProcesses
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(BuyingProcessesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<BuyingProcess>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<BuyingProcess>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
