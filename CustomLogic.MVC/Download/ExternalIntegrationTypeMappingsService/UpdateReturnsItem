using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.ExternalIntegrationTypeMappingsService
{
public class ReturnResultEvent : IUpdateEvent<ExternalIntegrationTypeMappingsViewModel, ExternalIntegrationTypeMapping>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(ExternalIntegrationTypeMappingsViewModel model, ref IQueryable< ExternalIntegrationTypeMapping> repository, IUnitOfWork unitOfWork, Response<ExternalIntegrationTypeMappingsViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<ExternalIntegrationTypeMapping>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = ExternalIntegrationTypeMappings
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

