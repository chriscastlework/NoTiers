using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.WatchNotificationEmailsService
{
    public class Save : IInsertEvent<WatchNotificationEmailsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(WatchNotificationEmailsViewModel model, IUnitOfWork unitOfWork, Response<WatchNotificationEmailsViewModel> result, ICoreUser user)
        {

            var newCustom = WatchNotificationEmails();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<WatchNotificationEmail>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = WatchNotificationEmails
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(WatchNotificationEmailsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<WatchNotificationEmail>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<WatchNotificationEmail>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
