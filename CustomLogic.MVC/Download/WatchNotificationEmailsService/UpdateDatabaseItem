using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.WatchNotificationEmailsService
{
    public class Update : IUpdateEvent<WatchNotificationEmailsViewModel,WatchNotificationEmail>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(WatchNotificationEmailsViewModel model, ref IQueryable<WatchNotificationEmail> repository, IUnitOfWork unitOfWork, Response<WatchNotificationEmailsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = WatchNotificationEmails
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<WatchNotificationEmail>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = WatchNotificationEmailsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

