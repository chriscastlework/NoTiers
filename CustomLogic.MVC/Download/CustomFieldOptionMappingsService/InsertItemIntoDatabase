using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CustomFieldOptionMappingsService
{
    public class Save : IInsertEvent<CustomFieldOptionMappingsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CustomFieldOptionMappingsViewModel model, IUnitOfWork unitOfWork, Response<CustomFieldOptionMappingsViewModel> result, ICoreUser user)
        {

            var newCustom = CustomFieldOptionMappings();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<CustomFieldOptionMapping>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = CustomFieldOptionMappings
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CustomFieldOptionMappingsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<CustomFieldOptionMapping>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<CustomFieldOptionMapping>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
