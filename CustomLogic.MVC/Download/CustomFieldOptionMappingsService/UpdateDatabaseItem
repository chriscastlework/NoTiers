using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.CustomFieldOptionMappingsService
{
    public class Update : IUpdateEvent<CustomFieldOptionMappingsViewModel,CustomFieldOptionMapping>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(CustomFieldOptionMappingsViewModel model, ref IQueryable<CustomFieldOptionMapping> repository, IUnitOfWork unitOfWork, Response<CustomFieldOptionMappingsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = CustomFieldOptionMappings
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<CustomFieldOptionMapping>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = CustomFieldOptionMappingsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

