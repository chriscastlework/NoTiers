using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.UserRatingsService
{
    public class Update : IUpdateEvent<UserRatingsViewModel,UserRating>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(UserRatingsViewModel model, ref IQueryable<UserRating> repository, IUnitOfWork unitOfWork, Response<UserRatingsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = UserRatings
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<UserRating>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = UserRatingsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

