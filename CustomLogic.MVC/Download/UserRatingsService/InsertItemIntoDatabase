using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.UserRatingsService
{
    public class Save : IInsertEvent<UserRatingsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(UserRatingsViewModel model, IUnitOfWork unitOfWork, Response<UserRatingsViewModel> result, ICoreUser user)
        {

            var newCustom = UserRatings();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<UserRating>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = UserRatings
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(UserRatingsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<UserRating>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<UserRating>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
