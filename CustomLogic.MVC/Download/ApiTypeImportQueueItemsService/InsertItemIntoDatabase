using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ApiTypeImportQueueItemsService
{
    public class Save : IInsertEvent<ApiTypeImportQueueItemsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ApiTypeImportQueueItemsViewModel model, IUnitOfWork unitOfWork, Response<ApiTypeImportQueueItemsViewModel> result, ICoreUser user)
        {

            var newCustom = ApiTypeImportQueueItems();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ApiTypeImportQueueItem>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ApiTypeImportQueueItems
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ApiTypeImportQueueItemsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ApiTypeImportQueueItem>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ApiTypeImportQueueItem>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
