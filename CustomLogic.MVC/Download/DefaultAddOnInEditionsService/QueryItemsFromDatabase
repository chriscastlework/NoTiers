using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.DefaultAddOnInEditionsService
{
    public class QueryLogic : IViewListEvent<DefaultAddOnInEditionsViewModel, DefaultAddOnInEdition>
    {

            public bool Run(NgTableParams model, ref IQueryable<DefaultAddOnInEdition> repository, NgTable<DefaultAddOnInEditionsViewModel> result, ICoreUser user, IUnitOfWork db
            {
            var ngTransformer = new QueryToNgTable<DefaultAddOnInEditionsViewModel>();

            var query = DefaultAddOnInEditions
            Mapper.MapDbModelQueryToViewModelQuery(repository);

            ngTransformer.ToNgTableDataSet(model, query, result);
            return true;
        }
    }
}

