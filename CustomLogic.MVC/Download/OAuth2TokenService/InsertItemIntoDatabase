using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.OAuth2TokenService
{
    public class Save : IInsertEvent<OAuth2TokenViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(OAuth2TokenViewModel model, IUnitOfWork unitOfWork, Response<OAuth2TokenViewModel> result, ICoreUser user)
        {

            var newCustom = OAuth2Token();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<OAuth2Token>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = OAuth2Token
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(OAuth2TokenViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<OAuth2Token>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<OAuth2Token>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
