using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.StandardObjectDefinitionsService
{
    public class Update : IUpdateEvent<StandardObjectDefinitionsViewModel,StandardObjectDefinition>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(StandardObjectDefinitionsViewModel model, ref IQueryable<StandardObjectDefinition> repository, IUnitOfWork unitOfWork, Response<StandardObjectDefinitionsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = StandardObjectDefinitions
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<StandardObjectDefinition>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = StandardObjectDefinitionsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

