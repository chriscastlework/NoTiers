using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.StepDocumentsService
{
    public class Save : IInsertEvent<StepDocumentsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(StepDocumentsViewModel model, IUnitOfWork unitOfWork, Response<StepDocumentsViewModel> result, ICoreUser user)
        {

            var newCustom = StepDocuments();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<StepDocument>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = StepDocuments
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(StepDocumentsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<StepDocument>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<StepDocument>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
