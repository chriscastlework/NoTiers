using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ColumnPreferencesService
{
    public class Save : IInsertEvent<ColumnPreferencesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ColumnPreferencesViewModel model, IUnitOfWork unitOfWork, Response<ColumnPreferencesViewModel> result, ICoreUser user)
        {

            var newCustom = ColumnPreferences();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ColumnPreference>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ColumnPreferences
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ColumnPreferencesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ColumnPreference>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ColumnPreference>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
