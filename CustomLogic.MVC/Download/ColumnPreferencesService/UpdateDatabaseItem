using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ColumnPreferencesService
{
    public class Update : IUpdateEvent<ColumnPreferencesViewModel,ColumnPreference>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ColumnPreferencesViewModel model, ref IQueryable<ColumnPreference> repository, IUnitOfWork unitOfWork, Response<ColumnPreferencesViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = ColumnPreferences
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<ColumnPreference>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ColumnPreferencesMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

