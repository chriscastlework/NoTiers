using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.LocalizationsService
{
    public class Update : IUpdateEvent<LocalizationsViewModel,Localization>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(LocalizationsViewModel model, ref IQueryable<Localization> repository, IUnitOfWork unitOfWork, Response<LocalizationsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = Localizations
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<Localization>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = LocalizationsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

