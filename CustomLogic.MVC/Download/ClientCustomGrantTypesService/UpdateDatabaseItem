using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.ClientCustomGrantTypesService
{
    public class Update : IUpdateEvent<ClientCustomGrantTypesViewModel,ClientCustomGrantType>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(ClientCustomGrantTypesViewModel model, ref IQueryable<ClientCustomGrantType> repository, IUnitOfWork unitOfWork, Response<ClientCustomGrantTypesViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = ClientCustomGrantTypes
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<ClientCustomGrantType>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = ClientCustomGrantTypesMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

