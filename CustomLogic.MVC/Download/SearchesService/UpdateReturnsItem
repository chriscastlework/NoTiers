using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.SearchesService
{
public class ReturnResultEvent : IUpdateEvent<SearchesViewModel, Search>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(SearchesViewModel model, ref IQueryable< Search> repository, IUnitOfWork unitOfWork, Response<SearchesViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<Search>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = Searches
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

