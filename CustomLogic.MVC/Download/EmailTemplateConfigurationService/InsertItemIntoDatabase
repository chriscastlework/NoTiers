using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.EmailTemplateConfigurationService
{
    public class Save : IInsertEvent<EmailTemplateConfigurationViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(EmailTemplateConfigurationViewModel model, IUnitOfWork unitOfWork, Response<EmailTemplateConfigurationViewModel> result, ICoreUser user)
        {

            var newCustom = EmailTemplateConfiguration();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<EmailTemplateConfiguration>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = EmailTemplateConfiguration
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(EmailTemplateConfigurationViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<EmailTemplateConfiguration>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<EmailTemplateConfiguration>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
