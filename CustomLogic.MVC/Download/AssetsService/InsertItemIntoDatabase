using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.AssetsService
{
    public class Save : IInsertEvent<AssetsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(AssetsViewModel model, IUnitOfWork unitOfWork, Response<AssetsViewModel> result, ICoreUser user)
        {

            var newCustom = Assets();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Asset>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Assets
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(AssetsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Asset>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Asset>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
