using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ReceivedWebhookModelQueuesService
{
    public class Save : IInsertEvent<ReceivedWebhookModelQueuesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ReceivedWebhookModelQueuesViewModel model, IUnitOfWork unitOfWork, Response<ReceivedWebhookModelQueuesViewModel> result, ICoreUser user)
        {

            var newCustom = ReceivedWebhookModelQueues();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ReceivedWebhookModelQueue>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ReceivedWebhookModelQueues
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ReceivedWebhookModelQueuesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ReceivedWebhookModelQueue>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ReceivedWebhookModelQueue>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
