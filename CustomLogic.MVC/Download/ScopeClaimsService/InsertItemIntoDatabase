using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.ScopeClaimsService
{
    public class Save : IInsertEvent<ScopeClaimsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(ScopeClaimsViewModel model, IUnitOfWork unitOfWork, Response<ScopeClaimsViewModel> result, ICoreUser user)
        {

            var newCustom = ScopeClaims();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<ScopeClaim>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = ScopeClaims
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(ScopeClaimsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<ScopeClaim>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<ScopeClaim>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
