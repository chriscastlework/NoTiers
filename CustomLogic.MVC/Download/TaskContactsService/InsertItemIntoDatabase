using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.TaskContactsService
{
    public class Save : IInsertEvent<TaskContactsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(TaskContactsViewModel model, IUnitOfWork unitOfWork, Response<TaskContactsViewModel> result, ICoreUser user)
        {

            var newCustom = TaskContacts();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<TaskContact>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = TaskContacts
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(TaskContactsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<TaskContact>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<TaskContact>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
