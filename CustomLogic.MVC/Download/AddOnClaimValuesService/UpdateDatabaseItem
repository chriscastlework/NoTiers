using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.AddOnClaimValuesService
{
    public class Update : IUpdateEvent<AddOnClaimValuesViewModel,AddOnClaimValue>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(AddOnClaimValuesViewModel model, ref IQueryable<AddOnClaimValue> repository, IUnitOfWork unitOfWork, Response<AddOnClaimValuesViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = AddOnClaimValues
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<AddOnClaimValue>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = AddOnClaimValuesMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

