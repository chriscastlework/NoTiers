using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.AddOnClaimValuesService
{
public class ReturnResultEvent : IUpdateEvent<AddOnClaimValuesViewModel, AddOnClaimValue>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(AddOnClaimValuesViewModel model, ref IQueryable< AddOnClaimValue> repository, IUnitOfWork unitOfWork, Response<AddOnClaimValuesViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<AddOnClaimValue>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = AddOnClaimValues
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

