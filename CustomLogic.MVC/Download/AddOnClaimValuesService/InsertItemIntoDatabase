using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.AddOnClaimValuesService
{
    public class Save : IInsertEvent<AddOnClaimValuesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(AddOnClaimValuesViewModel model, IUnitOfWork unitOfWork, Response<AddOnClaimValuesViewModel> result, ICoreUser user)
        {

            var newCustom = AddOnClaimValues();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<AddOnClaimValue>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = AddOnClaimValues
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(AddOnClaimValuesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<AddOnClaimValue>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<AddOnClaimValue>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
