using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.UserProfilesService
{
    public class Save : IInsertEvent<UserProfilesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(UserProfilesViewModel model, IUnitOfWork unitOfWork, Response<UserProfilesViewModel> result, ICoreUser user)
        {

            var newCustom = UserProfiles();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<UserProfile>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = UserProfiles
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(UserProfilesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<UserProfile>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<UserProfile>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
