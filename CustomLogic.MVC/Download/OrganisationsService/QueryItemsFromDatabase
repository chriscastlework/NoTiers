using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.OrganisationsService
{
    public class QueryLogic : IViewListEvent<OrganisationsViewModel, Organisation>
    {

            public bool Run(NgTableParams model, ref IQueryable<Organisation> repository, NgTable<OrganisationsViewModel> result, ICoreUser user, IUnitOfWork db
            {
            var ngTransformer = new QueryToNgTable<OrganisationsViewModel>();

            var query = Organisations
            Mapper.MapDbModelQueryToViewModelQuery(repository);

            ngTransformer.ToNgTableDataSet(model, query, result);
            return true;
        }
    }
}

