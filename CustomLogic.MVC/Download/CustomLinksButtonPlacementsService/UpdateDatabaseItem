using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.CustomLinksButtonPlacementsService
{
    public class Update : IUpdateEvent<CustomLinksButtonPlacementsViewModel,CustomLinksButtonPlacement>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(CustomLinksButtonPlacementsViewModel model, ref IQueryable<CustomLinksButtonPlacement> repository, IUnitOfWork unitOfWork, Response<CustomLinksButtonPlacementsViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = CustomLinksButtonPlacements
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<CustomLinksButtonPlacement>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = CustomLinksButtonPlacementsMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

