using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.MaintenanceSchedulesService
{
    public class Update : IUpdateEvent<MaintenanceSchedulesViewModel,MaintenanceSchedule>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(MaintenanceSchedulesViewModel model, ref IQueryable<MaintenanceSchedule> repository, IUnitOfWork unitOfWork, Response<MaintenanceSchedulesViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = MaintenanceSchedules
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<MaintenanceSchedule>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = MaintenanceSchedulesMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

