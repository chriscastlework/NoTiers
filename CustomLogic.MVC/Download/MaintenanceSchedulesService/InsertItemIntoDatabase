using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.MaintenanceSchedulesService
{
    public class Save : IInsertEvent<MaintenanceSchedulesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(MaintenanceSchedulesViewModel model, IUnitOfWork unitOfWork, Response<MaintenanceSchedulesViewModel> result, ICoreUser user)
        {

            var newCustom = MaintenanceSchedules();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<MaintenanceSchedule>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = MaintenanceSchedules
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(MaintenanceSchedulesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<MaintenanceSchedule>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<MaintenanceSchedule>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
