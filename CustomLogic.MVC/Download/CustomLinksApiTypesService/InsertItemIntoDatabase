using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CustomLinksApiTypesService
{
    public class Save : IInsertEvent<CustomLinksApiTypesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CustomLinksApiTypesViewModel model, IUnitOfWork unitOfWork, Response<CustomLinksApiTypesViewModel> result, ICoreUser user)
        {

            var newCustom = CustomLinksApiTypes();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<CustomLinksApiType>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = CustomLinksApiTypes
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CustomLinksApiTypesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<CustomLinksApiType>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<CustomLinksApiType>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
