using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.TableHeadersService
{
public class ReturnResultEvent : IUpdateEvent<TableHeadersViewModel, TableHeader>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(TableHeadersViewModel model, ref IQueryable< TableHeader> repository, IUnitOfWork unitOfWork, Response<TableHeadersViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<TableHeader>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = TableHeaders
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

