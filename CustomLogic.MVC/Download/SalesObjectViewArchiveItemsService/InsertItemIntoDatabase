using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.SalesObjectViewArchiveItemsService
{
    public class Save : IInsertEvent<SalesObjectViewArchiveItemsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(SalesObjectViewArchiveItemsViewModel model, IUnitOfWork unitOfWork, Response<SalesObjectViewArchiveItemsViewModel> result, ICoreUser user)
        {

            var newCustom = SalesObjectViewArchiveItems();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<SalesObjectViewArchiveItem>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = SalesObjectViewArchiveItems
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(SalesObjectViewArchiveItemsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<SalesObjectViewArchiveItem>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<SalesObjectViewArchiveItem>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
