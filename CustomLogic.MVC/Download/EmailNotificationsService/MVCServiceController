using System;
using System.Linq;
using System.Net;
using System.Web.Mvc;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Models;
using CustomLogic.Services.EmailNotificationsService;


public class EmailNotificationsController : Controller
{
    //private AomDbContext db = new AomDbContext();
    private readonly IService<EmailNotificationsViewModel>_EmailNotificationsService = new EmailNotificationsService(new DbContext());


        // GET: EmailNotifications
        public ActionResult Index()
        {
        return View(_EmailNotifications
        Service.List(new NgTableParams() {page = 1, count = 1000}, null).Data.ToList());
        }

        // GET: EmailNotifications/Details/5
        public ActionResult Details(Guid? id)
        {
        if (id == null)
        {
        return new HttpStatusCodeResult(HttpStatusCode.BadRequest);
        }
        return View(_EmailNotifications
        Service.View(new EmailNotifications
        ViewModel() { ID = id.Value}, null));
        }

        // GET: EmailNotifications/Create
        public ActionResult Create()
        {
        return View();
        }

        // POST: EmailNotifications/Create
        // To protect from overposting attacks, please enable the specific properties you want to bind to, for
        // more details see http://go.microsoft.com/fwlink/?LinkId=317598.
        [HttpPost]
        [ValidateAntiForgeryToken]
        public ActionResult Create([Bind(Include = "Id,Name")] EmailNotifications
        ViewModel aomMeta)
        {
        if (ModelState.IsValid)
        {
        var result =_EmailNotifications
        Service.Insert(aomMeta, null);
        if(result.Success)
        return RedirectToAction("Index");

        // what if it went wrong?
        }

        return View(aomMeta);
        }

        // GET: EmailNotifications
        s/Edit/5
        public ActionResult Edit(Guid? id)
        {
        if (id == null)
        {
        return new HttpStatusCodeResult(HttpStatusCode.BadRequest);
        }
        var result = _EmailNotifications
        Service.View(new EmailNotifications
        ViewModel {ID = id.Value}, null);
        if (!result.Success)
        {
        return HttpNotFound();
        }
        return View(result.Data);
        }

        // POST: EmailNotifications
        s/Edit/5
        // To protect from overposting attacks, please enable the specific properties you want to bind to, for
        // more details see http://go.microsoft.com/fwlink/?LinkId=317598.
        [HttpPost]
        [ValidateAntiForgeryToken]
        public ActionResult Edit([Bind(Include = "Id,Name")] EmailNotifications
        ViewModel aomMeta)
        {
        if (ModelState.IsValid)
        {
        var result = _EmailNotifications
        Service.Update(aomMeta, null);
        if(result.Success)
        return RedirectToAction("Index");

        // what if it goes wrong?
        }
        return View(aomMeta);
        }

        // GET: EmailNotifications
        s/Delete/5
        public ActionResult Delete(Guid? id)
        {
        if (id == null)
        {
        return new HttpStatusCodeResult(HttpStatusCode.BadRequest);
        }
        var result = _EmailNotifications
        Service.View(new EmailNotifications
        ViewModel {ID = id.Value}, null);
        if (!result.Success)
        {
        return HttpNotFound();
        }
        return View(result.Data);
        }

        // POST: EmailNotifications
        s/Delete/5
        [HttpPost, ActionName("Delete")]
        [ValidateAntiForgeryToken]
        public ActionResult DeleteConfirmed(Guid id)
        {
        var result = _EmailNotifications
        Service.Delete(new EmailNotifications
        ViewModel {ID = id}, null);
        return RedirectToAction("Index");
        }

        protected override void Dispose(bool disposing)
        {
        if (disposing)
        {
        // _EmailNotifications
        Service = null; // make services disposeable?
        }
        base.Dispose(disposing);
        }
        }


