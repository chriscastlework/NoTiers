using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.NotificationFieldsService
{
    public class Save : IInsertEvent<NotificationFieldsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(NotificationFieldsViewModel model, IUnitOfWork unitOfWork, Response<NotificationFieldsViewModel> result, ICoreUser user)
        {

            var newCustom = NotificationFields();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<NotificationField>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = NotificationFields
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(NotificationFieldsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<NotificationField>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<NotificationField>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
