using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.CustomLinksUrlsService
{
    public class Save : IInsertEvent<CustomLinksUrlsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(CustomLinksUrlsViewModel model, IUnitOfWork unitOfWork, Response<CustomLinksUrlsViewModel> result, ICoreUser user)
        {

            var newCustom = CustomLinksUrls();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<CustomLinksUrl>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = CustomLinksUrls
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(CustomLinksUrlsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<CustomLinksUrl>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<CustomLinksUrl>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
