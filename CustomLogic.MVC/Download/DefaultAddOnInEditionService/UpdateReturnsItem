using System.Linq;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;

namespace CustomLogic.Services.DefaultAddOnInEditionService
{
public class ReturnResultEvent : IUpdateEvent<DefaultAddOnInEditionViewModel, DefaultAddOnInEdition>
{
    public int priority()
    {
        return 1000;
    }

    public bool Run(DefaultAddOnInEditionViewModel model, ref IQueryable< DefaultAddOnInEdition> repository, IUnitOfWork unitOfWork, Response<DefaultAddOnInEditionViewModel>result, ICoreUser user)
    {
        var updatedDbModel = unitOfWork.With<DefaultAddOnInEdition>().Single(c => c.Id == model.Id); // Might be a partial primary key template needs 
        var newCustomResult = DefaultAddOnInEdition
        Mapper.MapDbModelToViewModel(updatedDbModel);
        result.Data = newCustomResult;
        return true;
    }
}

