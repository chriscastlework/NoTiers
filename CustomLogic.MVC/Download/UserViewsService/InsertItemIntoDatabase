using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.UserViewsService
{
    public class Save : IInsertEvent<UserViewsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(UserViewsViewModel model, IUnitOfWork unitOfWork, Response<UserViewsViewModel> result, ICoreUser user)
        {

            var newCustom = UserViews();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<UserView>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = UserViews
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(UserViewsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<UserView>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<UserView>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
