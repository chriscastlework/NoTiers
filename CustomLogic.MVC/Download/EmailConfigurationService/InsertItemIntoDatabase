using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.EmailConfigurationService
{
    public class Save : IInsertEvent<EmailConfigurationViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(EmailConfigurationViewModel model, IUnitOfWork unitOfWork, Response<EmailConfigurationViewModel> result, ICoreUser user)
        {

            var newCustom = EmailConfiguration();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<EmailConfiguration>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = EmailConfiguration
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(EmailConfigurationViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<EmailConfiguration>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<EmailConfiguration>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
