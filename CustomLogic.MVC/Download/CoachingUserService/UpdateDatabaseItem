using System.Data.Entity.Migrations;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;
using System.Linq;

namespace CustomLogic.Services.CoachingUserService
{
    public class Update : IUpdateEvent<CoachingUserViewModel,CoachingUser>
    {

        public int priority()
        {
            return 0;
        }
    
        public bool Run(CoachingUserViewModel model, ref IQueryable<CoachingUser> repository, IUnitOfWork unitOfWork, Response<CoachingUserViewModel> result, ICoreUser user)
        {
            var dbModel =  repository.Single(c=>c.Id == model.Id); // you need to be using the primary key could be composit
            var updatedDbModel = CoachingUser
            Mapper.MapInsertModelToDbModel(model, dbModel);
            unitOfWork.With<CoachingUser>().AddOrUpdate(updatedDbModel);
            unitOfWork.SaveChanges();
            var newCustomResult = CoachingUserMapper.MapDbModelToViewModel(updatedDbModel);
            result.Data = newCustomResult;
            return true;
        }
    }
}

