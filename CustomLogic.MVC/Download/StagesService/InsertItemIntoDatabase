using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.StagesService
{
    public class Save : IInsertEvent<StagesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(StagesViewModel model, IUnitOfWork unitOfWork, Response<StagesViewModel> result, ICoreUser user)
        {

            var newCustom = Stages();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Stage>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Stages
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(StagesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Stage>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Stage>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
