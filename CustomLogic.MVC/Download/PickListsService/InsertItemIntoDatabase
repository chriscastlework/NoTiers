using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.PickListsService
{
    public class Save : IInsertEvent<PickListsViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(PickListsViewModel model, IUnitOfWork unitOfWork, Response<PickListsViewModel> result, ICoreUser user)
        {

            var newCustom = PickLists();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<PickList>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = PickLists
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(PickListsViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<PickList>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<PickList>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
