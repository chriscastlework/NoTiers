using System;
using System.Linq;
using CustomLogic;
using CustomLogic.Core.Interfaces;
using CustomLogic.Core.Interfaces.DL;
using CustomLogic.Core.Models;


namespace CustomLogic.Services.InvitesService
{
    public class Save : IInsertEvent<InvitesViewModel>
    {
    public Guid CreatedId; // Might be a composite key!

    public bool Run(InvitesViewModel model, IUnitOfWork unitOfWork, Response<InvitesViewModel> result, ICoreUser user)
        {

            var newCustom = Invites();
            Mapper.MapInsertModelToDbModel(model);
            unitOfWork.With<Invite>().Add(newCustom);
            unitOfWork.SaveChanges();
            CreatedId = newCustom.Id;
            model.Id = CreatedId; // Might be a composit key
            var newCustomResult = Invites
            Mapper.MapDbModelToViewModel(newCustom);
            result.Data = newCustomResult;
            return true;
        }

        public bool Rollback(InvitesViewModel model, IUnitOfWork unitOfWork)
        {
            var removeItem = unitOfWork.With<Invite>().FirstOrDefault(c=>c.Id) == CreatedId);
            unitOfWork.With<Invite>().Remove(removeItem);
            unitOfWork.SaveChanges();
            return true;
        }

        public int priority()
        {
            return 1;
        }
    }
}
